{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./client/src/*"
            ]
        }
    },
    "include": [
        "client/**/*",
        "server/**/*",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}